<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
     <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <!-- <h1><%= 2+2 %></h1> -->
     <div class="main w-full min-h-screen bg-zinc-900 ">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input  class="block rounded-md outline-none my-2 w-full px-5 py-2 bg-zinc-800 " type="text" name="title" placeholder="Title goes here..">
                <textarea   class="block rounded-md outline-none my-2  w-full px-5 py-2 bg-zinc-800 resize-none" name="details"  placeholder="Write your task details here..."></textarea>
                <input type="submit" class="mt-3 bg-blue-600 py-2 px-3 rounded-sm" value="create task">
            </form>
        </div>
      

        <div class="tasks flex gap-3 flex-wrap p-10">
              <% if(files.length > 0 ){ %>
            <% files.forEach(function(val){ %>
                <div class="task  w-72 bg-zinc-800 px-3 py-4 rounded-md">
                <h1 class="text-white  text-3xl tracking-tighter "><%= val %></h1>
                <div class="flex justify-between mt-3">
                    <a class="text-blue-500 inline-block " href="/file/<%= val %>" >Read More.</a>
                    <a class="text-zinc-600 inline-block " href="/edit/<%= val %>" >edit</a>
                </div>
            </div>
            <% }) %> 
            <% } else { %>
            <h1 class=" text-zinc-800 text-3xl ">No task</h1>
                <% } %>
        </div>
     </div>

     <script src="/javascript/script.js"></script>
</body>
</html>